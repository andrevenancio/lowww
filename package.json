{
    "name": "lowww",
    "description": "WebGL2 Engine",
    "author": "Andre Venancio (info@andrevenancio.com)",
    "version": "1.1.1",
    "license": "MIT",
    "repository": "git@github.com:andrevenancio/lowww.git",
    "keywords": [
        "3d",
        "webgl",
        "webgl2"
    ],
    "scripts": {
        "es5:controls": "export PACKAGE=controls&&rollup -c scripts/rollup.es5.js -m inline",
        "es5:core": "export PACKAGE=core&&rollup -c scripts/rollup.es5.js -m inline",
        "es5:geometries": "export PACKAGE=geometries&&rollup -c scripts/rollup.es5.js -m inline",
        "es5:postprocessing": "export PACKAGE=postprocessing&&rollup -c scripts/rollup.es5.js -m inline",
        "es5:all": "npm run es5:core&&npm run es5:controls&&npm run es5:geometries&&npm run es5:postprocessing",
        "es6:controls": "export PACKAGE=controls&&rollup -c scripts/rollup.es6.js",
        "es6:core": "export PACKAGE=core&&rollup -c scripts/rollup.es6.js",
        "es6:geometries": "export PACKAGE=geometries&&rollup -c scripts/rollup.es6.js",
        "es6:postprocessing": "export PACKAGE=postprocessing&&rollup -c scripts/rollup.es6.js",
        "es6:all": "npm run es6:core&&npm run es6:controls&&npm run es6:geometries&&npm run es6:postprocessing",
        "minify:controls": "export PACKAGE=controls&&node scripts/minify-options.js&&uglifyjs packages/controls/build/controls.js --config-file=\"scripts/minify-options.json\" > packages/controls/build/controls.min.js",
        "minify:core": "export PACKAGE=core&&node scripts/minify-options.js&&uglifyjs packages/core/build/core.js --config-file=\"scripts/minify-options.json\" > packages/core/build/core.min.js",
        "minify:geometries": "export PACKAGE=geometries&&node scripts/minify-options.js&&uglifyjs packages/geometries/build/geometries.js --config-file=\"scripts/minify-options.json\" > packages/geometries/build/geometries.min.js",
        "minify:postprocessing": "export PACKAGE=postprocessing&&node scripts/minify-options.js&&uglifyjs packages/postprocessing/build/postprocessing.js --config-file=\"scripts/minify-options.json\" > packages/postprocessing/build/postprocessing.min.js",
        "minify:all": "npm run minify:core&&npm run minify:controls&&npm run minify:geometries&&npm run minify:postprocessing",
        "package:controls": "export PACKAGE=controls&& node scripts/generate-packages.js",
        "package:core": "export PACKAGE=core&& node scripts/generate-packages.js",
        "package:geometries": "export PACKAGE=geometries&& node scripts/generate-packages.js",
        "package:postprocessing": "export PACKAGE=postprocessing&& node scripts/generate-packages.js",
        "package:all": "npm run package:core&&npm run package:controls&&npm run package:geometries&&npm run package:postprocessing",
        "dev:controls": "export PACKAGE=controls&&rollup -c scripts/rollup.es5.js -w -m inline",
        "dev:core": "export PACKAGE=core&&rollup -c scripts/rollup.es5.js -w -m inline",
        "dev:geometries": "export PACKAGE=geometries&&rollup -c scripts/rollup.es5.js -w -m inline",
        "dev:postprocessing": "export PACKAGE=postprocessing&&rollup -c scripts/rollup.es5.js -w -m inline",
        "dev:all": "concurrently --kill-others --names \"rollup-controls,rollup-core,rollup-geometries,rollup-postprocessing,http-server\" -c \"black.bgWhite,black.bgWhite,black.bgWhite,black.bgWhite,black.bgWhite\" \"npm run dev:core\" \"npm run dev:controls\" \"npm run dev:geometries\" \"npm run dev:postprocessing\" \"npm run server\"",
        "build": "npm run es5:all&&npm run es6:all&&npm run minify:all&&npm run package:all",
        "server": "./node_modules/.bin/http-server ./ -s & opener http://localhost:8080/examples",
        "start": "npm run dev:all",
        "publish:npm": "npm run build&&npm publish ./packages/controls/&&npm publish ./packages/core/&&npm publish ./packages/geometries/&&npm publish ./packages/postproduction/",
        "publish:gh": "git subtree push --prefix examples origin gh-pages",
        "lint:controls": "eslint packages/controls/**/*.js --quiet",
        "lint:core": "eslint packages/core/**/*.js --quiet",
        "lint:geometries": "eslint packages/geometries/**/*.js --quiet",
        "lint:postprocessing": "eslint packages/postprocessing/**/*.js --quiet",
        "lint:all": "npm run lint:core&&npm run lint:controls&&npm run lint:geometries&&npm run lint:postprocessing",
        "test": "echo \"no test specified\" && exit 0"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.2.3",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-preset-airbnb": "^2.4.0",
        "babel-preset-env": "^1.6.1",
        "concurrently": "^3.5.1",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-import": "^2.11.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-react": "^7.7.0",
        "eslint": "^4.19.1",
        "http-server": "^0.11.1",
        "opener": "^1.4.3",
        "rollup": "^0.58.2",
        "uglify-js": "^3.3.22"
    },
    "dependencies": {
        "gl-matrix": "^2.5.1",
        "rollup-plugin-babel": "^3.0.4",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-replace": "^2.0.0"
    }
}
